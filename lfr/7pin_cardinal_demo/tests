[Tests]
  [generate_mesh]
    type = RunApp
    executable_pattern = 'cardinal*|griffin*'
    input = 'NTmesh.i  HCmesh.i'
    cli_args = '--mesh-only'
  []

  # Syntax tests
  [syntax_griffin]
    type = RunApp
    input = 'NT.i'
    check_input = true
    executable_pattern = 'griffin*'
    cli_args = "MultiApps/active='' Transfers/active=''"
    prereq = generate_mesh
    max_time = 400
  []
  [syntax_conduction]
    type = RunApp
    input = 'HC.i'
    check_input = true
    executable_pattern = 'cardinal*|moose*'
    cli_args = "Transfers/active='' MultiApps/active=''"
    prereq = generate_mesh
  []
  [syntax_nekrs]
    type = RunApp
    input = 'nek.i'
    check_input = true
    executable_pattern = 'cardinal*'
  []


  # Regression tests
  [run_multiphysics]
    type = CSVDiff
    input = 'NT.i'
    csvdiff = NT_out.csv
    cli_args = "Executioner/richardson_max_its=1 Executioner/fixed_point_max_its=2"
    executable_pattern = 'cardinal*'
    prereq = 'syntax_griffin'
    min_parallel = 144
    max_time = 2000
    mesh_mode = DISTRIBUTED
  []
  [run_conduction]
    type = CSVDiff
    input = 'HC.i'
    csvdiff = HC_out.csv
    cli_args = "Executioner/dt=0.0009106239460371001 Executioner/end_time=0.0009106239460371001 Outputs/time_step_interval=1"
    executable_pattern = 'cardinal*'
    prereq = 'syntax_conduction'
  []
  [run_nekrs]
    type = RunApp
    input = 'nek.i'
    skip = '#79'
    executable_pattern = 'cardinal*'
    prereq = 'syntax_nekrs'
  []
[]
